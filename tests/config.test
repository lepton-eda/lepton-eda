;;; '-p' with existing directory.
(test-group-with-cleanup "config -pexisting-dir"
  (test-setup)
  (mkdir "existing-dir")

  (receive (<status> <stdout> <stderr>)
      (command-values lepton-cli "config" "-pexisting-dir")
    (test-eq EXIT_SUCCESS <status>)

